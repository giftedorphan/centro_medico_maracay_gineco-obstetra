<div class="wrapper">
  <div class="col-md-12">
    <h1 class="first_title"><b>Listado de Pacientes</b></h1>
  </div>

  <div class="col-md-12">
    <% @patients.each do |patient| %>
      <div class="col-md-4">
        <ul class="data-ul">
          <a href=<%= patient_path(patient) %> class="square-link">
            <li class="square">
              <div class= "col-md-12 avatar-ratio-index space avatar_position">
                <% unless patient.avatar.blank? %>
                  <%= image_tag patient.avatar_url(:patient_index).to_s, {class: "avatar-ratio-index"} %>
                <% else %>
                  <%= image_tag("defaultavatar.jpg", {class: "avatar-ratio-index"}) %>
                <% end %>
              </div>
              <p class="client-text"><%= patient.nombre %> <%= patient.apellido %></p>
              <p class="client-text"><%= patient.cedula %></p>
            </li>
          </a>
        </ul>
      </div>
    <% end %>
  </div>

  <br>

  <div class="col-md-12 center-div">
    <%= will_paginate @patients, :next_label => 'Siguiente', :previous_label => 'Anterior', renderer: BootstrapPagination::Rails %>
  </div>
</div>